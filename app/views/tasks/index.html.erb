<div class="container">
  <div class="task-index"></div>
  <h1>タスク一覧</h1>
  <table>
    <tr>
      <th id="title">タイトル</th>
      <th id="content">内容</th>
      <th id="deadline">終了期限</th>
      <th id="status">ステータス</th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>

        <td><%= link_to "詳細", task_path(task.id) %></td>
        <td><%= link_to "編集", edit_task_path(task.id) %></td>
        <td><%= link_to "削除", task_path(task.id), method: :delete,  data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "タスクを登録する", new_task_path %>
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
  <%= link_to "通常の並び順にする", tasks_path %>
</div>
