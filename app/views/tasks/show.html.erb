<div class="container">
  <div class="task-show">
    <div class="form-wrapper">
      <h1>タスク詳細</h1>
      <div class="task-info">
        <ul>
          <li class="info-title">タイトル</li>
          <li><%= @task.title %></li>
        </ul>
        <ul>
          <li class="info-title">内容</li>
          <li><%= @task.content %></li>
        </ul>
        <ul>
          <li class="info-title">終了期限</li>
          <li><%= @task.deadline %></li>
        </ul>
        <ul>
          <li class="info-title">ステータス</li>
          <li><%= @task.status %></li>
        </ul>
        <ul>
          <li class="info-title">優先順位</li>
          <li><%= @task.priority %></li>
        </ul>
      </div>
      
      <div class="form-footer">
        <%= link_to "編集", edit_task_path %>
        <%= link_to "一覧へ戻る", tasks_path %>
      </div>
    </div>
  </div>
</div>
