<div class="form">
  <%= form_with model: @task, local: true do |f| %>

    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= @task.errors.count %>件のエラーがあります。</h2>

        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-wrapper">
      <% if params[:id] %>
         <h1>タスク編集</h1>
      <% else %>
         <h1>タスク登録</h1>
      <% end %>
      
        <div class="form-item">
         <%= f.label :title %>
         <%= f.text_field :title %>
        </div>
        <div class="form-item">
          <%= f.label :content %>
          <%= f.text_area :content %>
        </div>
        <div class="form-item">
           <%= f.label :deadline, class:"deadline-label"%>
           <%= f.date_field :deadline %> 
        </div>
        <div class="form-item">
           <%= f.label :status,class:"status-label"  %>
           <%= f.select :status, [["未着手", "未着手"],["着手中","着手中"],["完了","完了"]] %>
        </div>
        <div class="form-item">
           <%= f.label :priority,class:"priority-label"  %>
           <%= f.select :priority, Task.priorities.keys, :selected=>Task.priorities[@task.priority] %>
        </div>
        <div class="form-item">
          <%= f.label :label_ids, 'ラベル' %>
          <%= f.collection_check_boxes :label_ids, Label.all, :id, :label_name do |l| %> 
                                                                <%# include_hidden: false %>
            <%= l.check_box + l.label %>
          <% end %>

         <%# <% Label.all.each do |label|  %>
          <%# <%= f.check_box :label_ids, { multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false }, label[:id] %> 
          <%# <%= label.label_name %> 
        <%# <% end %>


        </div>
        <div class="button-panel">
          <%= f.submit class: "button" %>
        </div>
      
      <div class="form-footer">
        <%= link_to "一覧へ戻る", tasks_path %>
      </div>
    </div>
  <% end %>
</div>

