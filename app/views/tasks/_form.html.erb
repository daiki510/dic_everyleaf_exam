<div class="form">
  <%= form_with model: @task, local: true do |f| %>

    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= @task.errors.count %>件のエラーがあります。</h2>

        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-wrapper">
      <h1>タスク登録</h1>
      <form>
        <div class="form-item">
         <%= f.label :title %>
         <%= f.text_field :title %>
        </div>
        <div class="form-item">
          <%= f.label :content %>
          <%= f.text_area :content %>
        </div>
        <div class="form-item">
           <%= f.label :deadline ,class:"deadline-label" %>
           <%= f.date_field :deadline %> 
        </div>
        <div class="form-item">
           <%= f.label :status,class:"status-label"  %>
           <%= f.select :status, [["未着手", "未着手"],["着手中","着手中"],["完了","完了"]] %>
        </div>
        <div class="form-item">
           <%= f.label :priority,class:"priority-label"  %>
           <%= f.select :priority, Task.priorities.keys, :selected=>Task.priorities[@task.priority] %>
        </div>
        <div class="button-panel">
          <%= f.submit class: "button" %>
        </div>
      </form>
      <%# <div class="form-footer">
        <p><a href="#">Create an account</a></p>
        <p><a href="#">Forgot password?</a></p>
      </div> %>
    </div>
  <% end %>
</div>

